<!-- notes.ejs -->
<%- include('partials/_header') %>

  <header class="navbar border-dark border-bottom p-1">
    <nav class="btn-group">

      <a href="#" class="btn btn-sm pl-1 pr-1">&#9776;</a>

      <div class="dropdown">
        <button class="btn btn-sm dropdown-toggle" type="button" id="fileDropDown" data-bs-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          File
        </button>
        <div class="dropdown-menu" aria-labelledby="fileDropDown" tabindex="0">
          <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#newNoteModal">New Note</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#newNotebookModal">New Notebook</a>
          <div class="dropdown-divider"></div>
          <label for="inputFile" class="dropdown-item">Open</label>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item">Load</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item">Save</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item">Exit</a>
        </div>
      </div>

      <div class="dropdown">
        <button class="btn btn-sm dropdown-toggle" type="button" id="editDropDown" data-bs-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Edit
        </button>
        <div class="dropdown-menu" aria-labelledby="editDropDown">
          <button class="dropdown-item" onclick="execCmd('selectAll')">Select All</button>
          <div class="dropdown-divider"></div>
          <button class="dropdown-item" onclick="execCmd('undo');">Undo</button>
          <button class="dropdown-item" onclick="execCmd('redo');">Redo</button>
          <div class="dropdown-divider"></div>
          <button class="dropdown-item" onclick="execCmd('cut');">Cut</button>
          <button class="dropdown-item" onclick="execCmd('copy');">Copy</button>
        </div>
      </div>
      <div class="dropdown">
          <button class="btn btn-sm dropdown-toggle" type="button" id="viewDropDown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              View
          </button>
          <div class="dropdown-menu" aria-labelledby="viewDropDown">
              <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#searchNoteModal">Search &#128269;</a>
              <div class="dropdown-divider"></div>
              <button class="dropdown-item" onclick="switchTheme();">Switch Theme</button>
          </div>
      </div>
    </nav>
    <nav class="btn-group"></nav>
    <nav class="btn-group">
      <a class="btn btn-sm" href="/logout">Logout</a>
    </nav>
  </header>

  <!-- Display notes within a centered div with top margin -->
  <div class="container mt-4">
    <section id="flash" class="mt-3"></section>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <ul class="list-group" id="list-group1">
          <% for (const note of userNote) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center note-item" id="<%= note.id %>">
              <a href="/notes/<%= note.id %>">
                <%= note.title %>
              </a>
              <span class="badge bg-danger rounded-pill">X</span>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </div>


  <%- include('partials/_footer') %>
