<%- include('partials/_header') %>

  <main class="container mt-4">

    <section id="flash" class="mt-3"></section>

    <div class="mb-3">
      <label for="<%= thisNotebook.id %>" class="form-label">Title</label>
      <input id="<%= thisNotebook.id %>" class="text form-control notebook-item" type="text" value="<%= thisNotebook.title %>" disabled="true" />
    </div>

    <ul class="list-group" id="list-group1">
      <% for (const note of userNote) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center note-item" id="<%= note.id %>">
          <a href="/notes/<%= note.id %>">
            <%= note.title %>
          </a>
          <span class="badge bg-danger rounded-pill">X</span>
        </li>
      <% } %>
    </ul>

  </main>

<%- include('partials/_footer') %>
