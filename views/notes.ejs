<!-- notes.ejs -->
<%- include('partials/_header') %>

  <header class="navbar border-dark border-bottom p-1">
    <nav class="btn-group">

      <a href="#" class="btn btn-sm pl-1 pr-1">&#9776;</a>

      <div class="dropdown">
          <button class="btn btn-sm dropdown-toggle" type="button" id="fileDropDown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              File
          </button>
          <div class="dropdown-menu" aria-labelledby="fileDropDown" tabindex="0">
              <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#newNoteModal">New</a>
              <div class="dropdown-divider"></div>
              <label for="inputFile" class="dropdown-item">Open</label>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item">Load</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item">Save</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item">Exit</a>
          </div>
      </div>
      <div class="dropdown">
          <button class="btn btn-sm dropdown-toggle" type="button" id="editDropDown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Edit
          </button>
          <div class="dropdown-menu" aria-labelledby="editDropDown">
              <button class="dropdown-item" onclick="execCmd('selectAll')">Select All</button>
              <div class="dropdown-divider"></div>
              <button class="dropdown-item" onclick="execCmd('undo');">Undo</button>
              <button class="dropdown-item" onclick="execCmd('redo');">Redo</button>
              <div class="dropdown-divider"></div>
              <button class="dropdown-item" onclick="execCmd('cut');">Cut</button>
              <button class="dropdown-item" onclick="execCmd('copy');">Copy</button>
          </div>
      </div>
      <div class="dropdown">
          <button class="btn btn-sm dropdown-toggle" type="button" id="viewDropDown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              View
          </button>
          <div class="dropdown-menu" aria-labelledby="viewDropDown">
              <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#searchNoteModal">Search</a>
              <button class="dropdown-item" onclick="toggleSource();">View Source</button>
              <button class="dropdown-item" onclick="toggleEdit();">Toggle Edit</button>
              <button class="dropdown-item" onclick="toggleFormat();">Toggle Format</button>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" data-toggle="modal" data-target="#modalScroll">Settings</a>
              <a class="dropdown-item" data-toggle="modal" data-target="#modalTab">Options..</a>
          </div>
      </div>
      <div class="pl-15">
        <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#searchNoteModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
        </svg> Search</button>
      </div>
  </nav>
  <nav class="pl-15">
    <div>
      <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#searchNoteModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
      </svg> Search . . . </button>
    </div>
  </nav>
  <nav class="btn-group"></nav>
    <nav class="btn-group">
      <a class="btn btn-sm" href="/logout">Logout</a>
    </nav>
  </header>

  <!-- Display notes within a centered div with top margin -->
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <ol class="list-group list-group-numbered">
          <% for (const note of userNote) { %>
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold">
                  <%= note.title %>
                </div>

                <!-- Display "Last edited" and note.updated_at -->
                <div class="text-muted">Last edited: <%= note.updated_at.toISOString().split('T')[0] %>
                </div>
              </div>

              <!-- Replace the creation date with a button for reading and deleting -->
              <div class="d-flex align-items-center">
                <a href="/notes/read/<%= note.id %>" class="btn btn-primary me-2">Read</a>
                <form action="/notes/delete/<%= note.id %>" method="POST">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </li>
            <% } %>
        </ol>
      </div>
    </div>
  </div>


  <%- include('partials/_footer') %>
