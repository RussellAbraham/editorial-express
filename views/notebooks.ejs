<%- include('partials/_header') %>

  <main class="container mt-4" id="container">

    <section id="flash" class="mt-3"></section>

    <ul class="list-group" id="list-group1">

      <% for (const notebook of notebooks) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center notebook-item"
          id="<%= notebook.id %>">
          <a href="/notebook/<%= notebook.id %>">
            <%= notebook.title %>/
          </a>
          <span class="badge bg-danger rounded-pill">X</span>
        </li>
      <% } %>

      <% for (const note of notesWithoutNotebook) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center note-item" id="<%= note.id %>">
          <a href="/notes/<%= note.id %>">
            <%= note.title %>
          </a>
          <span class="badge bg-danger rounded-pill">X</span>
        </li>
      <% } %>

    </ul>

  </main>

<%- include('partials/_footer') %>
